{
  "manifest_version": 3,
  "name": "TextLLaMA",
  "version": "1.1.1",
  "description": "Simplifies communication with word explanations, email composition, grammar check, and multi-language translation.",
  "permissions": [
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "activeTab"
  ],
  "host_permissions": [
    "http://*:*/*",
    "https://*:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  }
}